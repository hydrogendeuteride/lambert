# Core Application Settings
NODE_ENV=production           # Application environment (production, development, test)
PORT=3005                     # Port on which the server will listen
MAX_USER=3                    # Maximum number of concurrent users allowed

# Security Settings
SESSION_SECRET=your_secret    # Secret key for session encryption (CHANGE THIS!)
BCRYPT_SALT_ROUNDS=10         # Number of rounds for password hashing
TOKEN_EXPIRES_IN='3h'         # JWT token expiration time (e.g., '3h', '1d')

# Database Configuration
MONGO_URI=mongodb://admin:change_password@mongo:27017/<DB_NAME>?authSource=admin
                              # MongoDB connection string with credentials

# CORS Settings
ALLOWED_ORIGINS=https://<YOUR_DOMAIN>  # Allowed origins for CORS (comma-separated for multiple domains)